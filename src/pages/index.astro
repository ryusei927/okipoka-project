---
import AppLayout from '../layouts/AppLayout.astro';
import UpcomingTournaments from '../components/UpcomingTournaments.tsx';
---
<AppLayout>
  <div class="container">
    <!-- ヘッダ行（右にログインボタン） -->
    <div class="section" style="display:flex;justify-content:space-between;align-items:center;gap:12px;">
      <h1 class="section__title">今日・明日のトーナメント</h1>
      <a href="/api/line/login" class="btn-line">LINEでログイン</a>
    </div>

    <!-- フィルタ行（箱だけ先に） -->
    <div class="toolbar" style="margin-bottom:12px;">
      <button class="chip chip--on">今日</button>
      <button class="chip">明日</button>
      <button class="chip">今週</button>
      <span class="chip muted" style="cursor:default">近い順（準備中）</span>
    </div>

    <!-- カードグリッド -->
    <div class="grid grid--cards">
      <!-- 読み込み中プレースホルダ（軽量） -->
      <div class="card" style="display:none">
        <div class="thumb skel"></div><div style="padding:10px 12px"><div class="skel" style="height:16px;width:70%"></div></div>
      </div>

      <UpcomingTournaments client:load />
    </div>
  </div>
</AppLayout>
<style>
  .btn-line {
    display: inline-block;
    padding: 8px 16px;
    border-radius: 6px;
    background: #06c755;
    color: #fff;
    font-weight: 600;
    text-decoration: none;
  }
</style>

